{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting": "Warning",
      "ModelContextProtocol": "Warning",
      "MemoryServer": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MemoryServer": {
    "Transport": {
      "Mode": "STDIO",
      "Port": 5000,
      "Host": "localhost",
      "EnableCors": true,
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://127.0.0.1:3000"
      ]
    },
    "Database": {
      "ConnectionString": "Data Source=memory.db;Cache=Shared",
      "EnableWAL": true,
      "BusyTimeout": 30000,
      "CommandTimeout": 30,
      "MaxConnections": 10
    },
    "LLM": {
      "DefaultProvider": "openai",
      "OpenAI": {
        "ApiKey": "${OPENAI_API_KEY}",
        "Model": "gpt-4",
        "Temperature": 0.0,
        "MaxTokens": 1000,
        "Timeout": 30,
        "MaxRetries": 3
      },
      "Anthropic": {
        "ApiKey": "${ANTHROPIC_API_KEY}",
        "Model": "claude-3-sonnet-20240229",
        "Temperature": 0.0,
        "MaxTokens": 1000,
        "Timeout": 30,
        "MaxRetries": 3
      }
    },
    "Memory": {
      "MaxMemoryLength": 10000,
      "DefaultSearchLimit": 10,
      "DefaultScoreThreshold": 0.7,
      "CacheSize": 1000,
      "EnableCaching": true
    },
    "Server": {
      "Port": 8080,
      "Host": "localhost",
      "EnableCors": true,
      "MaxConcurrentConnections": 100
    },
    "SessionDefaults": {
      "DefaultUserId": "default_user",
      "CleanupIntervalMinutes": 60,
      "MaxSessionAge": 1440
    }
  }
} 