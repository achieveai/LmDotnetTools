    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>AchieveAi.LmDotnetTools.ModelConfigGenerator</AssemblyName>
    <RootNamespace>AchieveAi.LmDotnetTools.ModelConfigGenerator</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.5" />
