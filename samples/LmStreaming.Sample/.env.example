# LmStreaming.Sample Environment Configuration
# Copy this file to .env and fill in your values.
# .env files are git-ignored and will not be committed.

# Provider mode: "test" (default), "openai", "anthropic", or "codex"
LM_PROVIDER_MODE=test

# OpenAI / OpenAI-compatible provider settings
# Used when LM_PROVIDER_MODE=openai
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Anthropic / Anthropic-compatible provider settings
# Used when LM_PROVIDER_MODE=anthropic
# NOTE: ANTHROPIC_BASE_URL should include the full API path prefix.
# The client appends /messages to this URL directly.
# For Anthropic: https://api.anthropic.com/v1 (default)
# For Kimi: https://api.kimi.com/coding
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Example: Kimi 2.5 via OpenAI-compatible API
# LM_PROVIDER_MODE=openai
# OPENAI_API_KEY=your-kimi-key
# OPENAI_BASE_URL=https://api.moonshot.cn/v1
# OPENAI_MODEL=kimi-2.5

# Example: Kimi 2.5 via Anthropic-compatible API
# LM_PROVIDER_MODE=anthropic
# ANTHROPIC_API_KEY=your-kimi-key
# ANTHROPIC_BASE_URL=https://api.kimi.com/coding
# ANTHROPIC_MODEL=kimi-2.5

# OpenAI Codex App Server settings
# Used when LM_PROVIDER_MODE=codex
CODEX_CLI_PATH=codex
CODEX_CLI_MIN_VERSION=0.101.0
CODEX_APP_SERVER_STARTUP_TIMEOUT_MS=30000
CODEX_TURN_COMPLETION_TIMEOUT_MS=120000
CODEX_TURN_INTERRUPT_GRACE_PERIOD_MS=5000
CODEX_MODEL=gpt-5.3-codex
CODEX_API_KEY=
CODEX_BASE_URL=
CODEX_APPROVAL_POLICY=on-request
CODEX_SANDBOX_MODE=workspace-write
CODEX_SKIP_GIT_REPO_CHECK=true
CODEX_NETWORK_ACCESS_ENABLED=true
CODEX_WEB_SEARCH_MODE=disabled
CODEX_BASE_INSTRUCTIONS=
CODEX_DEVELOPER_INSTRUCTIONS=
CODEX_MODEL_INSTRUCTIONS_FILE=
CODEX_MODEL_INSTRUCTIONS_THRESHOLD_CHARS=8000
CODEX_TOOL_BRIDGE_MODE=hybrid
CODEX_EXPOSE_INTERNAL_TOOLS_AS_TOOL_MESSAGES=true
CODEX_EMIT_LEGACY_INTERNAL_TOOL_REASONING_SUMMARIES=false
CODEX_RPC_TRACE_ENABLED=false
CODEX_RPC_TRACE_FILE=
# Diagnostic-only toggle. Raw provider streaming is the default path.
CODEX_EMIT_SYNTHETIC_MESSAGE_UPDATES=false
CODEX_SYNTHETIC_MESSAGE_UPDATE_CHUNK_CHARS=28
CODEX_MCP_PORT=39200
