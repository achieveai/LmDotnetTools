{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/LmDotnetTools.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/LmDotnetTools.sln",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/LmDotnetTools.sln"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "build-solution",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"group": "build"
		},
		{
			"label": "build-solution-final",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build"
			],
			"group": "build"
		}
	]
}